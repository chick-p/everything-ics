{
  "name": "everything-ics",
  "version": "0.1.1",
  "private": true,
  "scripts": {
    "build:tailwind": "tailwindcss build src/styles.css -o public/static/css/styles.css",
    "dev": "wrangler dev",
    "deploy": "npm run build:tailwind && wrangler publish --minify",
    "test": "jest",
    "lint": "run-p lint:*",
    "lint:prettier": "prettier --check .",
    "lint:eslint": "eslint src/**/*.ts",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier -w .",
    "fix:eslint": "npm run lint:eslint --fix"
  },
  "dependencies": {
    "hono": "^3.1.6",
    "tailwindcss": "^3.3.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20221111.1",
    "@types/jest": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.58.0",
    "esbuild": "^0.17.17",
    "esbuild-jest": "^0.5.0",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "jest": "^29.5.0",
    "jest-environment-miniflare": "^2.13.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.7",
    "wrangler": "^2.16.0"
  }
}
